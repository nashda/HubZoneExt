{
    "name": "HubZoneExt",
    "description": "Chrome extension for identifying HubZone properties in Redfin",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting","webRequest", "tabs"],
    "host_permissions": [
      "https://maps.certify.sba.gov/hubzone/map/*", 
      "https://www.redfin.com/*",
      "https://redfin.com/*"
    ],
    "action": {
      "default_icon": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [ "/images/*.png" ],
        "matches": [ "https://www.redfin.com/*" ]
      }
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.redfin.com/*",
          "https://redfin.com/*"
        ],
        "all_frames": true,
        "js": ["content-script.js"]
      }
    ],    
    "icons": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  }